# ================================
# NPP Portal Backend Environment Variables
# ================================

# -----------------------------
# Database Configuration
# -----------------------------
DB_URL=jdbc:postgresql://localhost:5432/npp_db
DB_NAME=npp_db
DB_USERNAME=postgres
DB_PASSWORD=your_password_here
DB_PORT=5432

# -----------------------------
# Spring Configuration
# -----------------------------
# Profiles: dev, local, prod
SPRING_PROFILE=dev

# Server
SERVER_PORT=8080
APP_PORT=8080

# -----------------------------
# JPA/Hibernate
# -----------------------------
# DDL Auto: validate, update, create, create-drop
DDL_AUTO=update
SHOW_SQL=true
FORMAT_SQL=true

# -----------------------------
# Logging
# -----------------------------
# Levels: TRACE, DEBUG, INFO, WARN, ERROR
LOGGING_LEVEL=INFO

# -----------------------------
# Instructions
# -----------------------------
# 1. Copy this file: cp .env.example .env
# 2. Edit .env and set your actual values
# 3. NEVER commit .env to Git!